<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rian_noronha.organizze">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Organizze">
        <activity
            android:name=".organizacao.activity.DespesasActivity"
            android:exported="false"
            android:theme="@style/despesaTheme"
            />
        <activity
            android:name=".organizacao.activity.ReceitasActivity"
            android:exported="false"
            android:theme="@style/receitaTheme"
            />
        <activity
            android:name=".organizacao.activity.PrincipalActivity"
            android:exported="false"
            android:label="@string/title_activity_principal"
            android:theme="@style/Theme.Organizze.NoActionBar" />
        <activity
            android:name=".organizacao.activity.CadastroActivity"
            android:exported="false" />
        <activity
            android:name=".organizacao.activity.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".organizacao.activity.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Intro">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>